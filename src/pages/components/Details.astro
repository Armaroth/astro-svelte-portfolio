---
const { text } = Astro.props;
---
<article class="bg-hex-blue-400 px-4 sm:px-8 lg:px-16 py-8 bg-gray-50 text-hex-gold-100">
  <section class="max-w-4xl mx-auto space-y-8">
      <h1 class="text-2xl sm:text-3xl font-semibold text-hex-gold-400">
        {text.info.heading}
      </h1>
      <p class="mt-4 text-base sm:text-lg leading-relaxed">
        {text.info.content}
      </p>
    </section>
    <section>
      <h2 class="text-2xl sm:text-3xl font-semibold text-hex-gold-400">
        {text.futureGoals.heading}
      </h2>
      <p class="mt-4 text-base sm:text-lg leading-relaxed">
        {text.futureGoals.content}
      </p>
    </section>
    <section>
      <h2 class="text-2xl sm:text-3xl font-semibold text-hex-gold-400">
        {text.interviewTakeaway.heading}
      </h2>
      <p class="mt-4 text-base sm:text-lg leading-relaxed">
        {text.interviewTakeaway.content}
      </p>
    </section>
</article>
